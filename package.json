{
  "name": "sebenza-waste-suite",
  "version": "1.0.0",
  "description": "Sebenza Waste - Complete business suite with landing page and office applications",
  "private": true,
  "workspaces": [
    "landing-site",
    "office-suite"
  ],
  "scripts": {
    "dev": "npm run dev:all",
    "dev:all": "concurrently \"npm run dev:landing\" \"npm run dev:office\"",
    "dev:landing": "cd landing-site && npm run dev",
    "dev:office": "cd office-suite && npm run dev",
    "build": "npm run build:all",
    "build:all": "npm run build:landing && npm run build:office",
    "build:landing": "cd landing-site && npm run build",
    "build:office": "cd office-suite && npm run build",
    "start": "npm run start:all",
    "start:all": "concurrently \"npm run start:landing\" \"npm run start:office\"",
    "start:landing": "cd landing-site && npm run start",
    "start:office": "cd office-suite && npm run start",
    "install:all": "npm install && cd landing-site && npm install && cd ../office-suite && npm install",
    "clean": "npm run clean:landing && npm run clean:office",
    "clean:landing": "cd landing-site && rm -rf dist node_modules",
    "clean:office": "cd office-suite && rm -rf .next node_modules",
    "lint": "npm run lint:landing && npm run lint:office",
    "lint:landing": "cd landing-site && npm run lint",
    "lint:office": "cd office-suite && npm run lint"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/WozaMali/SebenzaOne.git"
  },
  "keywords": [
    "sebenza",
    "waste-management",
    "office-suite",
    "landing-page",
    "react",
    "nextjs",
    "vite",
    "typescript"
  ],
  "author": "Sebenza Waste Team",
  "license": "MIT"
}
