# Remote Server Configuration
# Replace YOUR_SERVER_IP with the actual IP address of your server computer

# API Configuration
NEXT_PUBLIC_API_URL=http://YOUR_SERVER_IP:3001/api
NEXT_PUBLIC_SUPABASE_URL=http://YOUR_SERVER_IP:3001/api
NEXT_PUBLIC_SUPABASE_ANON_KEY=local-server-key

# Database Configuration (if using direct connection)
DATABASE_URL=sqlite://YOUR_SERVER_IP:3001/data/sebenza-suite.db

# Email Configuration
NEXT_PUBLIC_SMTP_HOST=YOUR_SERVER_IP
NEXT_PUBLIC_SMTP_PORT=587
NEXT_PUBLIC_SMTP_USER=your-email@example.com
NEXT_PUBLIC_SMTP_PASS=your-email-password
NEXT_PUBLIC_FROM_EMAIL=noreply@yourdomain.com
NEXT_PUBLIC_FROM_NAME=Sebenza Suite

# Storage Configuration
NEXT_PUBLIC_STORAGE_URL=http://YOUR_SERVER_IP:3001/api/storage
NEXT_PUBLIC_STORAGE_BUCKET=sebenza-suite

# Security
JWT_SECRET=your-local-jwt-secret
ENCRYPTION_KEY=your-32-character-encryption-key

